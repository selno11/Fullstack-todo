generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Todo {
  id        Int      @id @default(autoincrement())
  task      String
  isCompleted Boolean  @default(false)  // New field to track completion status
  createdAt DateTime @default(now())
}